<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="@dimen/applib_round_toast_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#b0000000"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/RoundToast"
            android:layout_width="@dimen/applib_round_toast_w"
            android:layout_height="wrap_content"
            android:background="@drawable/applib_shape_bg_round_toast"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/applib_round_toast_icon_padding_right"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/applib_test"
                android:textColor="@color/applib_round_toast_msg_color"
                android:textSize="@dimen/applib_round_toast_msg_fontsize" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>